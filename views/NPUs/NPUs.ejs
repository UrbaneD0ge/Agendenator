<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>AGENDENATOR</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link type="text/css" rel="stylesheet" href="..\css\style.css">
  <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">
</head>

<body class='container tablePage'>
  <header>
    <div>
      <div>
        <div class="col-md-10 text-center">
          <h1><a href='/'>AGENDENATOR</a></h1>
          <a href="/applications/new" class="btn btn-success">Add New Application</a>
          <a href="/applications" class="btn btn-primary">View all applications</a>
          <a href="/NPUs/new" class="btn btn-light">Add New NPU</a>
        </div>
      </div>
    </div>
  </header>
  <br>
  <table>
    <thead>
      <tr>
        <th>NPU</th>
        <th>Chair</th>
        <th>Chair Email</th>
        <th>Planner</th>
        <th>Planner Email</th>
        <th>Meeting Info</th>
        <th>Zoom ID</th>
        <th>Zoom PW</th>
        <th>Zoom Link</th>
        <th>Zoom Dial-In</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <% NPUs.forEach(NPU=> { %>
      <tr>
        <td class='NPU'>
          <%= NPU.NPU %>
        </td>
        <td>
          <%= NPU.chair %>
        </td>
        <td>
          <%= NPU.chairE %>
        </td>
        <td>
          <%= NPU.planner %>
        </td>
        <td>
          <%= NPU.plannerE %>
        </td>
        <td>
          <%= NPU.meeting %>
        </td>
        <td>
          <%= NPU.ZoomID %>
        </td>
        <td>
          <%= NPU.ZoomPW %>#
        </td>
        <td>
          <a href='<%= NPU.ZoomURL %>' target='_blank'>
            <%= NPU.ZoomURL.split('/').pop() %>
          </a>
        </td>
        <td>
          <%= NPU.ZoomDial %>
        </td>
        <td>
          <a href="/NPUs/edit/<%= NPU._id %>">Edit</a>
        </td>
        <td>
          <form class="d-inline" action="/NPUs/<%= NPU.id %>?_method=DELETE" method="POST">
            <button>Delete
            </button>
          </form>
        </td>
      </tr>
      <% }) %>
  </table>
</body>