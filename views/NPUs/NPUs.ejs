<body class='tablePage'>
  <header>
    <%- include('../_nav') %>
  </header>
  <br>
  <div class='d-flex flex-column'>
    <a class='btn btn-sm btn-success m-3' href="/NPUs/new">Add NPU</a>
    <table>
      <thead>
        <tr>
          <th>NPU</th>
          <th>Chair</th>
          <th>Planner</th>
          <th>Meeting Info</th>
          <th>Zoom ID</th>
          <th>Zoom PW</th>
          <th>Zoom Link</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <% NPUs.forEach(NPU=> { %>
        <tr>
          <td class='NPU'>
            <%= NPU.NPU %>
          </td>
          <td><a href="mailto:<%= NPU.chairE %>">
              <%= NPU.chair %>
            </a>
          </td>
          <td><a href="mailto:<%= NPU.plannerE %>">
              <%= NPU.planner %>
            </a>
          </td>
          <td>
            <%= NPU.meeting %>
          </td>
          <td>
            <a href="http://zoom.us/j/<%= NPU.ZoomID %>" target="_blank" rel="noopener noreferrer">
              <%= NPU.ZoomID %>
            </a>
          </td>
          <td>
            <%= NPU.ZoomPW %>#
          </td>
          <td>
            <a href='<%= NPU.ZoomURL %>' target='_blank'>
              <%= NPU.ZoomURL.split('/').pop() %>
            </a>
          </td>
          <td>
            <a class='btn btn-warning' href="/NPUs/edit/<%= NPU._id %>">‚úè</a>
          </td>
          <td>
            <form class="d-inline" action="/NPUs/<%= NPU.id %>?_method=DELETE" method="POST">
              <button class='btn btn-danger'>üóë
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
    </table>
  </div>
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
