<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>AGENDENATOR</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link type="text/css" rel="stylesheet" href="../../css/style.css">
</head>

<body class='tablePage'>
  <header>
    <div>
      <div>
        <div class="col-md-10 text-center">
          <h1><a href='/'>AGENDENATOR</a></h1>
          <h2>
            <%= application.title %>
          </h2>
          <a class="btn btn-secondary" href="/applications">View All</a>
        </div>
      </div>
    </div>
  </header>
  <br>
  <table>
    <thead>
      <tr>
        <th>NPU</th>
        <th>Adjacent</th>
        <th>Month</th>
        <th>Type</th>
        <th>Title</th>
        <th>Description</th>
        <th>Address</th>
        <th>Hearing Date</th>
        <th>Creation Date</th>
        <th>Delete</th>
        <th>Save</th>
      </tr>
    </thead>
    <tr>
      <td>
        <input type="text" name="NPU" value="<%= application.NPU %>">
      </td>
      <td>
        <%= application.adjacent %>
      </td>
      <td>
        <select name="month" id="month" required multiple>
          <option value='JAN'>January</option>
          <option value='FEB'>February</option>
          <option value='MAR'>March</option>
          <option value='APR'>April</option>
          <option value='MAY'>May</option>
          <option value='JUN'>June</option>
          <option value='JUL'>July</option>
          <option value='AUG'>August</option>
          <option value='SEP'>September</option>
          <option value='OCT'>October</option>
          <option value='NOV'>November</option>
          <option value='DEC'>December</option>
        </select>
      </td>
      <td>
        <select name='type' id='type' value="<%= application.type %>">
          <option value='MOSE'>MOSE</option>
          <option value='LRB'>LRB</option>
          <option value='BZA'>BZA</option>
          <option value='ZRB'>ZRB</option>
          <option value='CDP'>CDP</option>
          <option value='SD'>SD</option>
          <option value='LOR'>LOR</option>
        </select>
      </td>
      <td>
        <input type="text" name="title" value="<%= application.title %>">
      </td>
      <td>
        <input type='text' id='descr' value='<%= application.descr %>'>
      </td>
      <td>
        <input type="text" name="address" value="<%= application.address %>">
      </td>
      <td>
        <input type="date" name="date" value="<%= application.date %>">
      </td>
      <td>
        <%= application.createdAt.toISOString().substring(0,10) %>
      </td>
      <td>
        <form class="d-inline" action="/applications/<%= application.id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </td>
      <td>
        <form action="/<%= application.id %>?_method=PUT" class="d-inline" method="POST">
          <button type="submit" class="btn btn-success ">Save</button>
        </form>
      </td>
    </tr>
    <tr>
      <td class='notes' colspan='11'>
        <textarea type='text' id='notes' width='100'><%= application.notes %></textarea>
      </td>
    </tr>
  </table>
  <script>
    // select the months in application.month
    let months = document.getElementById('month');
    let selectedMonths = '<%= application.month %>'.split(',');
    selectedMonths.forEach
    // select the type in application.type
    let type = document.getElementById('type');
    let selectedType = '<%= application.type %>';
    for (let i = 0; i < type.options.length; i++) {
      if (type.options[i].value === selectedType) {
        type.options[i].selected = true;
      }
    }
  </script>
</body>